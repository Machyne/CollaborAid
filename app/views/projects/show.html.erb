<div class="container" id="show-project-cont">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @project.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h2>Description:</h2>
    </div>  
    <div class="col-md-10">
      <p><%= @project.description %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h2>Primary Sector:</h2>
    </div>
    <div class="col-md-4">
      <p><%= @project.psector %></p>
    </div>
    <div class="col-md-2">
      <h2>Additional Sectors:</h2>
    </div>
    <div class="col-md-4">
      <p><%= @project.asectors.join ", " %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h2>Overseeing Organization:</h2>
    </div>
    <div class="col-md-2">
      <p><%= @project.oversee %></p>
    </div>
    <div class="col-md-2">
      <h2>Primary Beneficiaries:</h2>
    </div>
    <div class="col-md-2">
      <p><%= @project.bens.join ", " %></p>
    </div>
    <div class="col-md-2">
      <h2>Funding Affiliation:</h2>
    </div>
    <div class="col-md-2">
      <p><%= @project.funders.join ", " %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h2>Start Date:</h2>
    </div>
    <div class="col-md-2">
      <p><%= @project.initdate.to_s %></p>
    </div>
  </div>
  <div class="row">
    <% if current_user && current_user.is_admin %>
    <div class="col-md-2">
      <%= link_to 'Edit', edit_project_path(@project) %>
    </div>
    <% end %>
    <div class="col-md-2">
      <%= link_to 'Back', projects_path %>
    </div>
  </div>
</div>
