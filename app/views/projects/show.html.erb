<div class="container" id="projects-cont">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @project.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-2 col-md-3 col-lg-3 text-right-lg">
      <h2>Implementing Organization:</h2>
    </div>
    <div class="col-xs-12 col-sm-10 col-md-8 col-lg-5">
      <p><%= @project.oversee %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-2 col-md-3 col-lg-3">
      <h2>Contact Info</h2>
    </div>
    <div class="col-xs-12 col-sm-10 col-md-8 col-lg-5">
      <p>
        Contact Name: <%= @project.cname %><br>
        Contact Email: <%= @project.cemail %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-2 col-md-3 col-lg-3">
      <h2>Project Description:</h2>
    </div>  
    <div class="col-xs-12 col-sm-10 col-md-8 col-lg-5">
      <p><%= @project.description %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-2 col-md-3 col-lg-3">
      <h2>Project Sectors:</h2>
    </div>
    <div class="col-xs-12 col-sm-10 col-md-8 col-lg-5">
      <p><%= @project.sectors.join ", " %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-2 col-md-3 col-lg-3">
      <h2>Primary Beneficiaries:</h2>
    </div>
    <div class="col-xs-12 col-sm-10 col-md-8 col-lg-5">
      <p><%= @project.bens.join ", " %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-2 col-md-3 col-lg-3">
      <h2>Project Start Date:</h2>
    </div>
    <div class="col-xs-12 col-sm-10 col-md-8 col-lg-5">
      <p><%= @project.initdate.to_s %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-2 col-md-3 col-lg-3">
      <h2>Expected Project Completion Date:</h2>
    </div>
    <div class="col-xs-12 col-sm-10 col-md-8 col-lg-5">
      <p><%= @project.enddate.to_s %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-2 col-md-3 col-lg-3">
      <h2>Project Funding Sources:</h2>
    </div>
    <div class="col-xs-12 col-sm-10 col-md-8 col-lg-5">
      <p><%= @project.funders.join ", " %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-2 col-md-3 col-lg-3">
      <h2>Project Location:</h2>
    </div>
    <div class="col-xs-12 col-sm-10 col-md-8 col-lg-5">
      <p><%= @project.locname %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-2">
      <%= link_to 'Home', root_path %>
    </div>
    <% if current_user && current_user.is_admin? %>
      <div class="col-xs-12 col-sm-2">
        <%= link_to 'Edit', edit_project_path %>
      </div>
    <% end %>
    <div class="col-xs-12 col-sm-2">
      <%= link_to 'Show All Projects', projects_path %>
    </div>
  </div>
</div>
